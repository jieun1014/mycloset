<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MyFragments.MyInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="20dp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="1.2dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@android:color/black" />

        <EditText
            android:id="@+id/editText_nickname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_round4"
            android:hint="최대 6자"
            android:inputType="textPersonName"
            android:maxLength="6"
            android:text="닉네임입니다"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/editText_nickname_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="이메일"
            android:textSize="20dp" />

        <View
            android:id="@+id/view_line2"
            android:layout_width="1.2dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/editText_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일입니다"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center|left"
        android:orientation="vertical">

        <Button
            android:id="@+id/modeify_Email_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일 변경"
            android:textSize="20dp" />

        <Button
            android:id="@+id/create_New_Password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>